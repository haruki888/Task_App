<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力エラーが<%= pluralize(@user.errors.count) %>件エラーがありました。
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
   </ul>
  </div>
<% end %>

<% if @task.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
     入力した内容に<%= pluralize(@task.errors.count) %>件エラーがあります。
    </div>
    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
   </ul>
  </div>
<% end %>
