<% provide(:title,"New Task") %>
<h1>新規作成</h1>

<div class="row">
  <div class ="col-md-8 col-md-offset-2
    <%=form_tag tasks_create_path do %>
      <%= f.label:"名称", class:"label-singup" %>
      <%= f.text_field:name, class:"form-control" %>
      <%= f.label:"詳細", class:"lebel-singup" %><br>
      <textarea rows="5" class:"form-control" name="content"></textarea><br>
      <%= f.submit "新規登録",class:"btn btn-lg btn-primary btn-signup" %>
    <% end %>
  </div>
</div>  
