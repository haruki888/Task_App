<% provide(:title, @current_user.name) %>

<div class="container">
   <h1><%=@current_user.name %>のタスク一覧</h1> 
     <div class = "row">
       <div class = "col-md-10 col-md-offset-1">
        <a class="btn btn-lg btn-primary pull-right" href="/users/:user_id/tasks/new">タスク新規作成</a>
         <table class="table table-hover" id="table-tasks">
           <thead>
             <tr>
               <th class="col-md-3">名称</th>
               <th class="col-md-5">作成日</th>
               <th class="col-md-4"></th>
             </tr>
           </thead>
           <tbody>
             <tr>
                <td class="col-md-3><a id="task-name" task_path><%= @tasks %></a></td>
                
                <td class="col-md-5><%= @current_user.created_at.strftime("%Y年%m月%d日").to_s %></td>
                
                <td class="col-md-4">
                  <a class="btn btn-success btn-lg" edit_task_path>編集</a>
                  <a class="btn btn-danger btn-lg"  data-method="delete" task_path>削除</a>
                </td>
              </tr>
         </table>
       </div>
     </div>
</div>
