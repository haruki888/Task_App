<% provide(:title,@current_user.name) %>
<% provide(:class_text,'user--edit') %>
<% probide(:button_text,'更新') %>
<h1>ユーザー情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=form_with(model:@user,local:true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label:名前,class:"label-user--edit" %>
      <%= f.text_field:name,class:"form-control" %>
      
      <%= f.label:メールアドレス,class:"label-user--edit" %>
      <%= f.email_field:email,class:"form-control" %>
      
      <%= f.label:パスワード,class:"label-user--edit" %>
      <%= f.password_field:password,class:"form-control" %>
      
      <%= f.label:パスワード再入力,class:"label-user--edit" %>
      <%= f.password_field:password_confirmation,class:"form-control" %>
      
      <%= f.submit "更新",class:"btn btn-primary btn-block btn-user--edit" %>
    <% end %> 
  </div>
</div>  
  
  
    
    
    