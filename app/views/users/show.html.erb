<% provide(:title, @user.name) %>
<div class="container">
  <h1>プロフィール</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-bordered" id="table-user">
        <tbody>
          <tr>
            <th class="active col-md-3">ID</th>
            <th class="col-md-9"><%=@current_user[:id] %></th>
          </tr>
            <th class="active">名前</th>
            <th><%=@current_user.name %></th>
          </tr>
          <tr>
            <th class="active">メールアドレス</th>
            <th><%=@current_user.email %></th>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <th><%= @current_user.created_at.strftime("%Y年%m月%d日").to_s %></th>
          </tr>          
        </tbody>
      </table>
    </div> 
  </div>  
</div>
